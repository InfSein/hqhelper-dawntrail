{
  "name": "hqhelper-dawntrail",
  "version": "2.0.4",
  "private": true,
  "author": "InfSein",
  "description": "One web app for ffxiv dawntrail master crafters.",
  "main": "./electron/main.js",
  "scripts": {
    "build": "run-p type-check \"build-only {@}\" --",
    "electron-start": "nodemon --exec electron .",
    "electron-build": "electron-builder",
    "build-only": "vite build",
    "postinstall": "node scripts/update-version.cjs",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@voerkai18n/runtime": "^2.1.8",
    "@voerkai18n/vue": "^2.1.8",
    "axios": "^1.7.4",
    "cheerio": "^1.0.0",
    "combined-stream": "^1.0.8",
    "delayed-stream": "^1.0.0",
    "electron-log": "^5.2.0",
    "electron-updater": "^6.2.1",
    "form-data": "^4.0.0",
    "jsdom": "^24.1.1",
    "mime-db": "^1.53.0",
    "mime-types": "^2.1.35",
    "pump": "^3.0.0",
    "unzipper": "^0.12.3",
    "vue": "^3.4.38",
    "vue-clipboard3": "^2.0.0",
    "vue-router": "^4.4.0",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.10.4",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.5.1",
    "@vicons/material": "^0.12.0",
    "@vitejs/plugin-vue": "^5.1.0",
    "@voerkai18n/vite": "^2.1.8",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.1",
    "electron": "^31.4.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.17.0",
    "fs-extra": "^11.2.0",
    "naive-ui": "^2.39.0",
    "nodemon": "^3.1.4",
    "npm-run-all2": "^6.1.2",
    "typescript": "~5.5.4",
    "vite": "^5.4.2",
    "vite-plugin-vue-devtools": "^7.3.9",
    "vue-tsc": "^2.1.2"
  },
  "build": {
    "appId": "com.infSein.hqhelperDawntrail",
    "productName": "HqHelper",
    "asar": true,
    "asarUnpack": [
      "electron/static-pages/**"
    ],
    "files": [
      "!electron/static-pages/**/*",
      "electron/main.js",
      "electron/preload.js"
    ],
    "extraResources": [
      {
        "from": "electron/static-pages/",
        "to": "static-pages/",
        "filter": ["**/*"]
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "include": "electron/installer.nsh"
    },
    "win": {
      "artifactName": "${productName}.Setup.${ext}",
      "icon": "electron/static-pages/icons/logo_v2_256x256.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
